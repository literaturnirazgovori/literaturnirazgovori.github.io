---
---
[
    {% for post in site.posts %}
    {
        "title": "{{ post.title | escape }}",
        "url": "{{ site.baseurl }}{{ post.url }}",
        "category": "{{ post.category }}",
        "tags": "{{ post.tags | join: ', ' }}",
        "date": "{{ post.date }}",
        "image": "{{ post.image }}",
        "author": "{{ post.author }}",
        "subtitle": "{{ post.subtitle | escape }}"
    } 
    {% unless forloop.last %},
    {% endunless %}
  {% endfor %}
]